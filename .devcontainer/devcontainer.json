{
  "name": "Zambian Farmer System - Codespace",
  "dockerComposeFile": ["../docker-compose.yml"],
  "service": "farmer-backend",
  "workspaceFolder": "/workspaces/Phase1",
  "shutdownAction": "stopCompose",
  "postCreateCommand": "docker-compose build --parallel && docker-compose up -d",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "esbenp.prettier-vscode",
        "dbaeumer.vscode-eslint",
        "ms-azuretools.vscode-docker"
      ]
    }
  }
}

